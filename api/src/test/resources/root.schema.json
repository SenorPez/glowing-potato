{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Trident API Root Schema",
  "description": "Schema for the root of Trident API",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties" : {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+(:[0-9]+)*((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "curies": {
      "type": "array",
      "items": {
        "properties": {
          "href": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "href",
          "name",
          "templated"
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "$ref": "#/definitions/curies"
        },
        "trident-api:systems": {
          "$ref": "#/definitions/standardLink"
        },
        "trident-api:constants": {
          "$ref": "#/definitions/standardLink"
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies",
        "trident-api:systems"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "_links"
  ]
}