{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Trident API Root Schema",
  "description": "Schema for the root of Trident API",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties" : {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+(:[0-9]+)*((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    }
  },
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "_links"
  ]
}